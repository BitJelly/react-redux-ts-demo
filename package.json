{
  "name": "tv-react",
  "version": "1.0.0",
  "description": "React Redux TypeScript Jest Demo",
  "author": "Dmitry Podlesny",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "clean": "rimraf public",
    "build": "cross-env ENV=production webpack --progress --colors --no-info",
    "dev": "cross-env ENV=development node webpack-dev-server.js",
    "tslint": "tslint -c ./tslint.json 'client/**/*.ts?(x)'"
  },
	"pre-commit": [ "tslint" ],
  "jest": {
    "testRegex": "(.*\\.)?test\\.tsx?$",
    "testPathDirs": [
      "<rootDir>/client/"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "moduleNameMapper": {
      "^.+\\.(css|less)$": "identity-obj-proxy"
    },
    "scriptPreprocessor": "<rootDir>/node_modules/typescript-babel-jest"
  },
  "dependencies": {
    "classnames": "^2.2.5",
    "react": "^15.3.2",
    "react-dom": "^15.3.2",
    "react-redux": "^4.4.5",
    "redux": "^3.6.0",
    "redux-actions": "^0.13.0"
  },
  "devDependencies": {
    "@types/classnames": "0.0.31",
    "@types/jest": "^15.1.32",
    "@types/react": "^0.14.44",
    "@types/react-addons-test-utils": "^0.14.15",
    "@types/react-dom": "^0.14.18",
    "@types/react-redux": "^4.4.32",
    "@types/redux-actions": "^0.8.31",
    "autoprefixer": "^6.5.1",
    "awesome-typescript-loader": "^2.2.4",
    "babel": "^6.5.2",
    "babel-core": "^6.18.2",
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-react": "^6.16.0",
    "cross-env": "^3.1.3",
    "css-loader": "^0.25.0",
    "extract-text-webpack-plugin": "^1.0.1",
    "html-webpack-plugin": "^2.24.1",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^16.0.2",
    "jest-cli": "^16.0.2",
    "less": "^2.7.1",
    "less-loader": "^2.2.3",
    "postcss-loader": "^1.1.0",
    "pre-commit": "^1.1.3",
    "react-addons-test-utils": "^15.3.2",
    "react-css-modules": "^3.7.10",
    "react-hot-loader": "^3.0.0-beta.6",
    "react-svg-loader": "^1.1.1",
    "rimraf": "^2.5.4",
    "source-map-loader": "^0.1.5",
    "style-loader": "^0.13.1",
    "ts-jest": "^0.1.11",
    "tslint": "^3.15.1",
    "tslint-loader": "^2.1.5",
    "typescript": "^2.0.6",
    "typescript-babel-jest": "^0.1.7",
    "webpack": "^1.13.3",
    "webpack-dev-server": "^1.16.2",
    "webpack-hot-middleware": "^2.13.1"
  }
}
